<% provide(:title, 'Search') %>
<h1>Search users </h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag search_path, method: 'get' do %>
	  <p>
	    Input user's name: 
	    <%= text_field_tag :search, params[:search] %><br/>
        <%= submit_tag "Search", name: nil %><br/> 
	  </p>

	<% end %>	
  </div>
</div>

   


<div>
 <% if @users %>
Total result: <%=@users.count %><br/>
<%#= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
	  <%= render user %>
    </li>
  <% end %>
</ul>
<%#= will_paginate %>

<% end %>
</div>